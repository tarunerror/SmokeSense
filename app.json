{
  "expo": {
    "name": "SmokeSense",
    "slug": "smokeSense",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "smokesense",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#00B095"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smokesense.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00B095"
      },
      "package": "com.smokesense.app",
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow SmokeSense to access your location to track where you smoke most often."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
